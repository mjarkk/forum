.ml-input-holder
  padding-top 10px
  display flex 
  flex-direction column
  width 100%
  max-width 270px
  * 
    cursor text
  label
    font-size 14px
    transform-origin top left
    transform scale(1.5,1.5) translateY(12px) translateX(5px)
    transition 0.3s transform, 0.3s color
    color rgba(0%, 0%, 0%, 0.5)
    will-change transform
  label.focus
    transform scale(1,1) translateY(2px) translateX(5px)
    color #000
  input
    background-color rgba(100%, 100%, 100%, 0)
    border 0px
    padding 5px
    font-size 18px
    border-bottom 2px solid PrimaryDark
